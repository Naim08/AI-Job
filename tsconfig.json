{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",

    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "electron/**/*.ts",
    "forge.env.d.ts",
    "agent/**/*.ts",
    "src/**/*.ts"
  ]
}
